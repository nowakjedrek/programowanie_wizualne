<Window x:Class="lab10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="List_view"  HorizontalAlignment="Left" Height="233" Margin="26,28,0,0" VerticalAlignment="Top" Width="693">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Path=Title}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Play" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,300,0,0" Width="75" Click="Play_Click"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="600,300,0,0" Width="75" Click="Stop_Click" />
        <Button x:Name="Wybierz" Content="Wybierz" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,300,0,0" Width="75" Click="Wybierz_Click" />


    </Grid>
</Window>
