<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Odbicie" Content="A" HorizontalAlignment="Left" Margin="75,60,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Obrot" Content="B" HorizontalAlignment="Left" Margin="75,100,0,0" VerticalAlignment="Top" Width="75" Click="Obrot_Click"/>
        <Button x:Name="Zielony" Content="C" HorizontalAlignment="Left" Margin="75,140,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Negatyw" Content="D" HorizontalAlignment="Left" Margin="75,180,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Wczytaj" Content="Wczytaj" HorizontalAlignment="Left" Margin="75,20,0,0" VerticalAlignment="Top" Width="75" Click="Wczytaj_Click"/>
        <Image x:Name="Obraz" Width="150" Margin="5" Grid.Column="0" Grid.Row="1" />



    </Grid>
</Window>
